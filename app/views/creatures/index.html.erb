<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" style="text-align:center">
      <h1>Bog Creatures</h1>
      
      <% @creatures.each do |creature| %>

        <div>
          <h2> Name: <%= creature.name %> <br> </h2>
          <p> Description: <%= creature.description %> </p>
          <%= button_to "Destroy", creature, method: :delete %> <br>
          <%= button_to "Update", creature, method: :delete %>
        </div>
        <br>

      <% end %>

       <a href="/creatures/new" class="btn btn-success">Create New Creature</a>

    </div>
  </div>
</div>
  
   
    
    